<script>
	// When the user scrolls the page, execute myFunction 
	window.onscroll = function() {myFunction()};
	
	function myFunction() {
	  var winScroll = document.body.scrollTop || document.documentElement.scrollTop;
	  var height = document.documentElement.scrollHeight - document.documentElement.clientHeight;
	  var scrolled = (winScroll / height) * 100;
	  document.getElementById("myBar").style.width = scrolled + "%";
	}
	
    var idcheckYN = "false";

	function idcheck(urls){
		if(""==$("#userId").val())
		{
			alert("아이디를 입력해주세요");	
		}else{
			if(idcheckYN == "false"){ 
				var action = urls+"idcheck";
				var form_data = {
					userId: $("#userId").val(),
					is_ajax: 1
				};
				
				$.ajax({
					type: "POST",
					url: action,
					data: form_data,
					success: function(response) {
						if(response == 'success') {
							alert("사용가능한 아이디 입니다.");
							idcheckYN = "true";
						}
						else {
							alert("사용중인 아이디 입니다.");
							$("#userId").val() = "";
							idcheckYN = "false";
						}
					},
					error:function(e){  
						alert("오류"+e.responseText);  
		         	}  
				});
			}
		}
	}
	
    function signpro(urls) {
        if("" == $("#userId").val()){
        	alert("아이디는 필수 입력 사항힙니다");
        	return;
        }else{
        	if(idcheckYN == "false"){
        		alert("아이디 중복 체크를 진행 바랍니다.");
        		return;
        	}
        } 
        
        if("" == $("#pass").val()){
        	alert("비밀번호는 필수 입력 사항힙니다");
        	return;
        }else{
		    if($("passCheck").val() == $("#pass").val()){
		    	alert("입력하신 비밀번호와 확인 비밀번호가 다릅니다.");
		    	return;
		    }
        }
         
        if("" == $("#fname").val()){
        	alert("이름은 필수 입력 사항힙니다");
        	return;
        }  
        if("" == $("#birth").val()){
        	alert("생년월일은 필수 입력 사항힙니다");
        	return;
        }else{
            var p = $("#birth").val().split('-').join('');
        	var dayRegExp = /^(19|20)\d{2}(0[1-9]|1[012])(0[1-9]|[12][0-9]|3[0-1])$/;
        	
        	var chkFlg = dayRegExp.test(p);
        	
        	if(!chkFlg){
				alert("생년월일을 yyyymmdd 형식으로 입력해야합니다.");
        		return;
			}
        
        }  
        if("" == $("#phone").val()){
        	alert("연락처는 필수 입력 사항힙니다");
        	return;
        }else{
	        var p = $("#phone").val().split('-').join('');
			var regPhone = /^((01[1|6|7|8|9])[1-9]+[0-9]{6,7})|(010[1-9][0-9]{7})$/;
			var chkFlg = regPhone.test(p);
			
			if(!chkFlg){
				alert("올바른 연락번호 형식이 아닙니다.");
        		return;
			}
        }
        if("" == $("#adr").val()){
        	alert("주소는 필수 입력 사항힙니다");
        	return;
        }  
        if(false == $("#checkagree").is(":checked")){
        	alert("개인정보 동의를 해야합니다.");
        	return;
        }    
    
        var tageturl = urls+"signprocess"
		var form = $('<form></form>');
            form.attr('action', tageturl);
            form.attr('method', 'post');
            form.appendTo('body');
            form.append($('<input type="hidden" value="'+ $("#userId").val() + '" name="userId">'));
            form.append($('<input type="hidden" value="'+ $("#pass").val() + '" name="pass">'));
            form.append($('<input type="hidden" value="'+ $("#fname").val() + '" name="fname">'));
            form.append($('<input type="hidden" value="'+ $("#birth").val() + '" name="birth">'));
            form.append($('<input type="hidden" value="'+ $("#phone").val() + '" name="phone">'));
            form.append($('<input type="hidden" value="'+ $("#adr").val() + '" name="adr">'));
            form.append($('<input type="hidden" value="'+ $("#school").val() + '" name="school">'));
            form.append($('<input type="hidden" value="'+ $("#exam").val() + '" name="exam">'));

	
		form.submit();
	}
</script>

